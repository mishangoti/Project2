<!DOCTYPE html>
<html>
<head>

  <% include ../../partials/head %>

</head>
<body>
    <!-- leftpanel start -->
    <% include ../../partials/leftpanel %>
    <!-- leftpanel end -->
    <div id="right-panel" class="right-panel">
        <!-- header start -->
        <% include ../../partials/header %>
        <!-- hearer end -->

        <!-- content start -->
        <div class="content">
            <div class="animated fadeIn">
                <!-- row start -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Retailers</strong>
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>User Profile</th>
                                            <th>Status</th>
                                            <th>Option</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% results.forEach(function(result, index){ %>
                                        <tr>
                                            <td><%= result.name %></td>
                                            <td><%= result.email %></td>
                                           
                                            <td>
                                                <a href="/retailers/userprofile/<%= result.id %>"
                                                <% if(result.roll_id == 2){ %>
                                                    class="btn btn-info btn-sm" >Make Customer
                                                <% } %>                                                
                                                </a>                                                 
                                            </td>
                                            <td>
                                                <a href="/retailers/status/<%= result.id %>"
                                                <% if(result.status == 1){ %>
                                                    class="btn btn-info btn-sm" >Active
                                                <% }else{ %>
                                                    class="btn btn-danger btn-sm" >Deactive
                                                <% } %>                                                
                                                </a>                                                 
                                            </td>
                                            <td>
                                                <!-- <a href    ="/retailers/edit/<%= result.id %>" class="btn btn-primary btn-sm" ><i class="fa fa-edit"></i></a> -->
                                                <a href="/retailers/delete/<%= result.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to DELETE?')"><i class="fa fa-trash"></i></a>
                                            </td>
                                        </tr>
                                        <% }); %>
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- row end -->
            </div>
        </div>
        <!-- content end -->
    </div>
    <!-- foot start -->
    <!-- foot has only js -->
    <% include ../../partials/foot %>
    <!-- foot end -->
</body>
